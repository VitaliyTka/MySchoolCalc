@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

<PageTitle>MySchoolCalc</PageTitle>

<RadzenLayout class="rz-shadow-3">
    <RadzenHeader>
        <div class="d-flex align-items-center">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="MySchoolCalc" />
        </div>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebarExpanded">
        <RadzenPanelMenu>
            @*<RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />*@
            <RadzenPanelMenuItem Text="Математичний калькулятор" Icon="calculate" Path="MathCalc" />
            <RadzenPanelMenuItem Text="Математичні формули" Icon="functions" Path="MathFormulas" />
            <RadzenPanelMenuItem Text="Геометричні формули" Icon="category" Path="GeometricFormulas" />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="p-2">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}